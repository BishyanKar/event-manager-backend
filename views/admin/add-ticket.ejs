<%- include('./header') %>

    <form class="splash-container " action="/api/admin/add-ticket-view" method="POST" enctype="multipart/form-data">
        <div class="card ">
            <div class="card-header">
                <h3 class="mb-1">Add Ticket</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <input class="form-control form-control-lg"  type="text" name="type" placeholder="type" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg"  type="text" name="event" placeholder="event" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg"  type="text" name="price" placeholder="price" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text"  name="discount" placeholder="discount" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text"  name="currency" placeholder="currency" autocomplete="off">
                </div>
                <div class="form-group pt-2">
                    <button class="btn btn-block btn-primary" type="submit">Add </button>
                </div>
             
               
         
        </div>
    </form>

