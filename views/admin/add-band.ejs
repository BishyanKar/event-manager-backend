                </div> -->
                <div class="form-group">
                    <input class="form-control form-control-lg"  type="text" name="name" placeholder="name" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text"  name="description" placeholder="description" autocomplete="off">
                </div>

                <div class="form-group">
                    <input class="form-control form-control-lg"  type="datetime-local"  name="launch_date" placeholder="launch_date" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text"  name="artists_list" placeholder="artists_list" autocomplete="off">
                </div>

                <div class="form-group">
                    <input class="form-control form-control-lg"  type="text" name="popularity" placeholder="popularity" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text"  name="albums_list" placeholder="albums_list" autocomplete="off">
                </div>

                <div class="form-group">
                    <input class="form-control form-control-lg"  type="text" name="events_list" placeholder="events_list" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="form-control form-control-lg" type="text"  name="category" placeholder="category" autocomplete="off">
                </div>


                <div class="form-group pt-2">
                    <button class="btn btn-block btn-primary" type="submit">Add </button>
                </div>
             
               
         
        </div>
    </form>

