<%- include('./header') %>

    <form class="splash-container " action="/api/admin/add-band-view" method="POST" enctype="multipart/form-data">
        <div class="card ">
            <div class="card-header">
                <h3 class="mb-1">Add Band</h3>
            </div>
            <div class="card-body">
                <!-- <div class="form-group" id="pick-image" style="display: block;" required="">
                        <h6>Choose an Image</h6>
